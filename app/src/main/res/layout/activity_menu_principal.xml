<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorAccent"
    tools:context="com.example.hffy.gstore.MenuPrincipal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dp">

            <TextView
                android:id="@+id/Titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:gravity="center_horizontal"
                android:text="Titulo"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="TEC"
                android:textColor="@android:color/white" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgLaptop"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/laptop" />

                        <ImageView
                            android:id="@+id/imgAndroid"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/android" />

                        <ImageView
                            android:id="@+id/imgCelular"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/celular" />

                        <ImageView
                            android:id="@+id/imgWatch"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/watch" />

                        <ImageView
                            android:id="@+id/imgApple"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/apple" />

                        <ImageView
                            android:id="@+id/imgSamsung"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/samsung" />

                        <ImageView
                            android:id="@+id/imgHuawei"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/huawei" />


                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/imgOfertas"
                android:layout_width="262dp"
                android:layout_height="129dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ofertas" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="GEEK"
                android:textColor="@android:color/white" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgComic"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/comic" />

                        <ImageView
                            android:id="@+id/imgManga"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/manga" />

                        <ImageView
                            android:id="@+id/imgPc"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/pc" />

                        <ImageView
                            android:id="@+id/imgXbox"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/xbox" />

                        <ImageView
                            android:id="@+id/imgNintendo"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/nintendo" />

                        <ImageView
                            android:id="@+id/imgPs"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/ps4" />

                        <ImageView
                            android:id="@+id/imgAlien"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/alien" />


                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>


            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="GAMER"
                android:textColor="@android:color/white" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgCombate"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/combate" />

                        <ImageView
                            android:id="@+id/imgRpg"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/rpg" />

                        <ImageView
                            android:id="@+id/imgShooter"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/shooter" />

                        <ImageView
                            android:id="@+id/imgCarrera"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/carrera" />

                        <ImageView
                            android:id="@+id/imgFight"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/fight" />

                        <ImageView
                            android:id="@+id/imgArcade"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/arcade" />

                        <ImageView
                            android:id="@+id/imgTerror"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/terror" />

                        <ImageView
                            android:id="@+id/imgDeportes"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingRight="5dp"
                            app:srcCompat="@drawable/deportes" />

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>


            <ImageView
                android:id="@+id/imgGeekzone"
                android:layout_width="262dp"
                android:layout_height="129dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/geekzone" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/cerrar"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Titulo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Cerrar sesion" />
</RelativeLayout>
